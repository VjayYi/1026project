<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductDetailActivity"
    android:background="@color/white"
    >
    <androidx.appcompat.widget.Toolbar
        style="@style/ToolbarStyle"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/default_logo"
                android:id="@+id/logo"
                app:riv_corner_radius="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:layout_marginLeft="14dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/tv_name"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:textSize="11sp"
                    android:textColor="@color/color_999999"
                    tools:text="India's most preferred digital lending company for young salaried millennials.India's most preferred digital lending company for young salaried millennials."
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/color_green_light"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pinjaman"
                            android:textSize="12sp"
                            android:textColor="@color/color_333333"
                            android:layout_weight="1"
                            android:gravity="center"
                            />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/tv_selection1"
                                android:layout_width="120dp"
                                android:layout_height="27dp"
                                android:background="@drawable/bg_green_oral5"
                                android:drawableRight="@mipmap/ic_jiantou"
                                android:paddingRight="1dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="8.000"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jangka Waktu"
                            android:textSize="12sp"
                            android:textColor="@color/color_333333"
                            android:gravity="center"
                            />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/tv_selection2"
                                android:layout_width="120dp"
                                android:layout_height="27dp"
                                android:background="@drawable/bg_green_oral5"
                                android:drawableRight="@mipmap/ic_jiantou"
                                android:paddingRight="1dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:text="8.000"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:background="@color/color_green_light"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00B38A"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:id="@+id/tv_data_left"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bunga + Admin fee"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00B38A"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:id="@+id/tv_data_right"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bunga + Admin fee"
                                android:textColor="#999999"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
<!--            Proses Peminjaman-->
<!--            Syarat Pengajuan Pinjaman-->
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tabIndicatorColor="#00B38A"
                app:tabIndicatorHeight="1dp"
                app:tabIndicatorFullWidth="true"
                app:tabTextColor="@color/color_333333"
                app:tabSelectedTextColor="#00B38A"
                app:tabMode="fixed"
                android:id="@+id/tab_layout"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_download"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_yellow_oral5"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Unduh dan Pinjam"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>