<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/logo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/default_logo"
                app:riv_corner_radius="5dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kissht"
                android:textSize="13sp"
                android:textColor="@color/color_333333"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="55dp"
            android:background="#A1E6D5"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00 05/09/2020"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Maksimum "
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@+id/tv_time"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 2.000.000"
                android:textColor="#FFBF00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/tv_text"
                android:layout_below="@+id/tv_text"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_open"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_border_green_oral8_2"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#00B38A"
            android:text="Segera Pinjam"
            android:textSize="13sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_green_light"/>
</LinearLayout>